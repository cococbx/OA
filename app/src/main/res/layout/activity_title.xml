<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/topTool"
    android:layout_width="fill_parent"
    android:layout_height="80dp"
    android:background="@color/title_bg"
    android:gravity="center"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/sys_title_txt"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLength="20"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:textSize="28.0sp" />

    <TextView
        android:id="@+id/refushTextView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@null"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="@color/white"
        android:textSize="20.0sp"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:background="@null"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:src="@drawable/back_icon"
        android:visibility="gone" />

    <Button
        android:id="@+id/btn_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/imgbtn_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:background="@null"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="20dp"
        android:src="@drawable/top_more"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:background="@null"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="20dp"
        android:textColor="@color/white"
        android:textSize="20.0sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/open"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="展开分组"
        android:textColor="@color/white"
        android:textSize="20.0sp"
        android:drawableLeft="@drawable/opengroup"
        android:visibility="gone" />

    <TextView
        android:id="@+id/close"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:gravity="center"
        android:drawableLeft="@drawable/closegroup"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="收起分组"
        android:textColor="@color/white"
        android:textSize="20.0sp"
        android:visibility="gone" />
    
    <TextView
        android:id="@+id/refush"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="刷新议题"
        android:textColor="@color/white"
        android:textSize="20.0sp"
        android:visibility="gone" />

</FrameLayout>